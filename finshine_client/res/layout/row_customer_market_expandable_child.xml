<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ltChild"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvLongProdName"
        style="@style/Txt12Gray808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:text="银企众盈" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvProdName"
                style="@style/Txt18Gray808080"
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:text="银企众盈" />

            <TextView
                android:id="@+id/tvProdCode"
                style="@style/Txt16Graybfbfbf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="429844902099090293" />
        </LinearLayout>

        <include
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            layout="@layout/custom_market_progress" />
    </LinearLayout>

</LinearLayout>