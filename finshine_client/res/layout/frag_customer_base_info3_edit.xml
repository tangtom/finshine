<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white_ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cbi_contact_history" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="联系方式"
            style="@style/Txt18Gray808080" 
            android:textStyle="bold" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="20dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Txt18Gray808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系地址 ：" />

              <EditText
                    android:id="@+id/editContactAddress"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:ems="10" 
                    style="@style/Txt18Gray808080"
                    android:maxLength="100"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Txt18Gray808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急联系人姓名：" />

                   <EditText
                    android:id="@+id/editEcName"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:ems="10" 
                    style="@style/Txt18Gray808080"
                     android:maxLength="20"/>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Txt18Gray808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="居住地址：" />

                <EditText
                    android:id="@+id/editResidentialAddress"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:ems="10" 
                    style="@style/Txt18Gray808080"
                     android:maxLength="100"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Txt18Gray808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急联系人手机：" />

                <EditText
                    android:id="@+id/editEcellPhone"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="phone" 
                    style="@style/Txt18Gray808080"/>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Txt18Gray808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="座机号码：" />

                <EditText
                    android:id="@+id/editTelephone"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="phone"
                    style="@style/Txt18Gray808080" 
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Txt18Gray808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急联系人关系：" />

                <EditText
                    android:id="@+id/editEcRelation"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:ems="10" 
                    style="@style/Txt18Gray808080"
                     android:maxLength="20"/>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Txt18Gray808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="传真号码：" />

                <EditText
                    android:id="@+id/editFax"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:ems="10" 
                    style="@style/Txt18Gray808080"
                     android:inputType="phone">

                    
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Txt18Gray808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社 　交　号　码：" />

                <EditText
                    android:id="@+id/editSocialNumber"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:ems="10" 
                    style="@style/Txt18Gray808080"
                   />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/Txt18Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮　　编：" />

               <EditText
                    android:id="@+id/editZipcode"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:ems="10" 
                    style="@style/Txt18Gray808080"
                    android:inputType="number"
                    android:maxLength="16"/>
        </TableRow>
    </TableLayout>

</LinearLayout>