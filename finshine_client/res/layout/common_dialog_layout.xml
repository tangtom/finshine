<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_out_shape"
    android:orientation="vertical" >
    
    <LinearLayout
        android:visibility="gone"
        android:duplicateParentState="true"
        android:id="@+id/lt_close"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
       >
       <TextView
            android:id="@+id/tv_close"
            android:layout_gravity="right"
            android:paddingRight="15dp"
            android:paddingTop="6dp"
            android:paddingLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="26sp"
             />
    </LinearLayout>
     
     
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/lt_difine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line"
        android:layout_marginTop="15dp"
        android:background="#979a9a" />

    <LinearLayout
        android:id="@+id/operation_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_left_bottom_radios"
            android:gravity="center"
            android:text="取消"
            android:textColor="#503C96"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/line3"
            android:layout_width="@dimen/line"
            android:layout_height="fill_parent"
            android:background="#979a9a" />

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_right_bottom_radios"
            android:gravity="center"
            android:text="确定"
            android:textColor="#503C96"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>