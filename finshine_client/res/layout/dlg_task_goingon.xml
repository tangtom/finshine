<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lt_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/task_dialog_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textTaskTitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_white_ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineartask"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="left|center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textTaskDegree"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_brown_d7c093"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="剩余"
            android:textColor="@color/text_red_ff0000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_task_goingon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red_ff0000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:textColor="@color/text_red_ff0000"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="200dp"
        android:layout_height="5dp" />

    <LinearLayout
        android:id="@+id/lineartaskprocess"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageTaskTarget"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/seekbaroff" />

            <ImageView
                android:id="@+id/imageTask"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/seekbaron" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_task_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_orange_ff8b23"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/text_orange_ff8b23"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_task_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_orange_ff8b23"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="left|center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_task_goingon4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:gravity="top"
            android:text="难度"
            android:textColor="@color/text_brown_d7c093"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/ratingBar1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:stepSize="0.5" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:text="说明"
        android:textColor="@color/text_brown_d7c093"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textTaskContent1"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_gray_808080"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:text="完成条件"
        android:textColor="@color/text_brown_d7c093"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textTaskCondition1"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_gray_808080"
        android:textSize="16sp" />



    <View
        android:layout_width="200dp"
        android:layout_height="5dp" />
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_gray_808080"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:text="奖励"
        android:textColor="@color/text_brown_d7c093"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linearLayoutBonuses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_task_timeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="center" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_accept"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="40dp"
        android:background="@color/background_gray_d0bd9c"
        android:textColor="@color/white" />

</LinearLayout>