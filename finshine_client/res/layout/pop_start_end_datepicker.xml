<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_filter_condition"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/Txt16Redff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="订单时间"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textStartTime"
            style="@style/Txt16Redff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:gravity="center"
            android:text="(开始时间)"
            android:textSize="15sp" />

        <TextView
            style="@style/Txt14Graybfbfbf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="————" />

        <TextView
            android:id="@+id/textEndTime"
            style="@style/Txt16Redff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(结束时间)"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_marginTop="5dp"
        android:background="#d4d4d4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" 
        android:gravity="left">

        <!-- <DatePicker -->
        <!-- android:id="@+id/datepickerStartTime" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_gravity="center_vertical" /> -->

        <com.codans.blossom.datepicker.DateDrumPicker
            android:id="@+id/datepickerStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="————" />

        <!-- <DatePicker -->
        <!-- android:id="@+id/datepickerEndTime" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_gravity="center_vertical" /> -->

        <com.codans.blossom.datepicker.DateDrumPicker
            android:id="@+id/datepickerEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonSure"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:background="@color/background_gray_d0bd9c"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white" />

</LinearLayout>