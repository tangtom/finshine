<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/appointment_back"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_appoint_title"
        style="@style/Txt16Whiteffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="15dip"
        android:text="@string/order_share" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dip"
        android:paddingTop="40dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/my_rebutation" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                android:contentDescription="@null"
                android:scaleType="center"
                android:src="@drawable/ic_zhuan" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:contentDescription="@null"
                android:scaleType="center"
                android:src="@drawable/ic_zhuan" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:contentDescription="@null"
                android:scaleType="center"
                android:src="@drawable/ic_zhuan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="18dip" >

            <TextView
                android:id="@+id/tv_product_name"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="12"
                android:text="" />

            <TextView
                android:id="@+id/tv_product_price"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dip"
                android:text="1份 = 1元" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_appoint_close"
            style="@style/Txt16Redff0000"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dip"
            android:gravity="center"
            android:text="对不起！ 预约已关闭！" />

        <LinearLayout
            android:id="@+id/layout_appoint_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Txt16Gray808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我要预约" />

                <EditText
                    android:id="@+id/et_appoint_before"
                    style="@style/Txt16Orangeff8b23"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:singleLine="true"
                    android:numeric="integer" 
                    android:maxLength="6"
                     />

                <TextView
                    style="@style/Txt16Gray808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="万份" />
            </LinearLayout>

            <TextView
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="注：每款产品只有一次预约份额的机会" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dip"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnBuySure"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="40dip"
                    android:background="@drawable/btn_common_corner_sure"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnBuyCancel"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="50dip"
                    android:background="@drawable/btn_common_corner_cancel"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_appoint_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="18dip" >

            <TextView
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约成功" />

            <TextView
                android:id="@+id/tv_appoint_success_count"
                style="@style/Txt16Orangeff8b23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="288万份" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_appoint_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="18dip" >

            <TextView
                android:id="@+id/tv_appoint_sure_title"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约确认中" />

            <TextView
                android:id="@+id/tv_appoint_sure_count"
                style="@style/Txt16Orangeff8b23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="188万份" />

            <TextView
                android:id="@+id/tv_appoint_total_title"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dip"
                android:text="共" />

            <TextView
                android:id="@+id/tv_appoint_total_count"
                style="@style/Txt16Orangeff8b23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="188万元" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_appoint_waiting"
            style="@style/Txt16Gray808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="18dip"
            android:text="请耐心等待确认通过" />

        <TextView
            android:id="@+id/tv_appoint_share"
            style="@style/Txt16Redff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="18dip"
            android:text="对不起！您预约份额不足0/500万" />

        <LinearLayout
            android:id="@+id/layout_appoint_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="18dip" >

            <TextView
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="追加份额，请联系" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:scaleType="center"
                android:src="@drawable/shape_phone" />

            <TextView
                android:id="@+id/tv_appoint_service"
                style="@style/Txt16Brownd7c093"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="发行商客服" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_appoint_space"
        android:layout_width="fill_parent"
        android:layout_height="40dip" />

    <Button
        android:id="@+id/btnSure"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dip"
        android:background="@drawable/btn_common_corner_sure"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white" />

</LinearLayout>