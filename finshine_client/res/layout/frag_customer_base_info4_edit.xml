<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white_ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cbi_contact_history" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="安全信息"
          style="@style/Txt18Gray808080" 
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身 　份 　证："
               style="@style/Txt18Gray808080" />

            <EditText
                android:id="@+id/editIDNumber"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    style="@style/Txt18Gray808080" />

             <ImageView
                android:id="@+id/imageView1"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/credit1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:src="@drawable/credit2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近入境时间："
               style="@style/Txt18Gray808080"  />

            
               <EditText
                   android:id="@+id/editPassportEntryTime"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    style="@style/Txt18Gray808080" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>