<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white_ffffff"
    android:orientation="vertical" >
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cbi_contact_history" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="历史投资经验"
            style="@style/Txt18Gray808080"
            android:textStyle="bold" />
    </LinearLayout>
    
       <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/shape_customer_manager_history_invest_bg"
        android:layout_margin="30dp">

           <EditText
               android:id="@+id/editHistorical"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:ems="10"
               android:layout_margin="20dp"
               android:inputType="textMultiLine"
               android:gravity="left" 
                style="@style/Txt16Gray808080"
                android:maxLength="1000">

           </EditText>
           
        </LinearLayout>
</LinearLayout>