<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray_d0bd9c" >

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="@color/text_white_ffffff"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageBack"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/ivPopMenu"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageNavigate"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/ic_prod_detail_title"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageNavigate"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/custom_manager_" />

</RelativeLayout>