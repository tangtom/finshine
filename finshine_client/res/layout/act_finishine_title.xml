<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_gray_d0bd9c"
        android:contentDescription="@null" >

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="首页"
            android:textColor="@color/text_white_ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/bg_finishine_first" />

        <Button
            android:id="@+id/btnCustomer"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnProduct"
            android:background="@null"
            android:contentDescription="@null"
           
            android:drawableTop="@drawable/ic_customer"
            android:scaleType="center"
            android:text="客户"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnProduct"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnTrade"
            android:background="@null"
            android:contentDescription="@null"
           
            android:drawableTop="@drawable/ic_product"
            android:scaleType="center"
            android:text="产品"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnTrade"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnCommision"
            android:background="@null"
            android:contentDescription="@null"
            android:drawableTop="@drawable/ic_trade"
            android:scaleType="center"
            android:text="交易"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCommision"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageNavigate"
            android:background="@null"
            android:contentDescription="@null"
           
            android:drawableTop="@drawable/ic_commimfision"
            android:scaleType="center"
            android:text="佣金"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/imageNavigate"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:contentDescription="@null"
            android:drawableTop="@drawable/ic_more"
            android:scaleType="center"
            android:text="更多"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- 头像部分 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@null" >

                <ImageView
                    android:id="@+id/ivSalsId"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_default_head" />

                <TextView
                    android:id="@+id/tvSalsName"
                    style="@style/Txt18Black000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/ivSalsId"
                    android:text="张鹏" />

                <LinearLayout
                    android:id="@+id/lt1"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tvSalsName"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/ivSalsId"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Txt14Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昨日签单：" />

                    <TextView
                        android:id="@+id/tvYestSignCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="1"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/Txt14Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="收入: " />

                    <TextView
                         android:id="@+id/tvYestIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="1万"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/lt1"
                     android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/ivSalsId"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Txt14Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本月签单：" />

                    <TextView
                        android:id="@+id/tvMonthSignCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="5"
                        android:textColor="@color/black" />

                    <TextView
                         android:id="@+id/tvMonthIncome"
                        style="@style/Txt14Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="收入: " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="1万"
                        android:textColor="@color/black" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line"
                android:background="@color/dimgrey" />

            <!-- 时间和天气部分 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tvDate"
                    style="@style/Txt16Gray808080"
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:lineSpacingExtra="5dp"
                    android:text="16:44:42\n2014年6月19日\n农历4月18日" />

                <Button
                    android:id="@+id/btnWeather"
                    style="@style/Txt16Gray808080"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:drawableTop="@drawable/ic_weather"
                    android:lineSpacingExtra="5dp"
                    android:text="12 -13度" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:id="@+id/ltAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />

                <ImageView
                    android:id="@+id/add_schedul"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_add_schedul" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/add_schedul"
                    android:padding="2dp"
                    android:background="@drawable/shape_5corner_bg" >

                    <ListView
                        android:id="@+id/listShecdule"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:divider="@color/line_orange_949494"
                        android:dividerHeight="@dimen/line"
                        android:fadingEdge="none"
                        android:scrollbars="none" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_notice" />

                <TextView
                    android:id="@+id/tv_notice"
                    style="@style/Txt16Redff0000"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:singleLine="false"
                      />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="620dp"
                    android:layout_height="fill_parent"
                    android:background="@drawable/shape_line_gray"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="1dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_gray"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                         >

                        <TextView
                            style="@style/Txt16Gray808080"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="产品名称" />

                        <TextView
                            style="@style/Txt16Gray808080"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="类型" />

                        <TextView
                            style="@style/Txt16Gray808080"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="期限" />

                        <TextView
                            style="@style/Txt16Gray808080"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="发行期" />

                        <TextView
                            style="@style/Txt16Gray808080"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="起投金额" />

                        <TextView
                            style="@style/Txt16Gray808080"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="预期收益" />

                        <TextView
                            style="@style/Txt16Gray808080"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/listViewProduct"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:divider="@color/line_gray_c5ccd2"
                        android:dividerHeight="@dimen/line"
                        android:fadingEdge="none"
                        android:scrollbars="none" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical" >

                    <RadioGroup
                        android:layout_marginTop="40dp"
                        android:id="@+id/rdoGrpTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical" >

                        <RadioButton
                            android:id="@+id/rdoTrust"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:button="@drawable/tgl_trust"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/rdoFund"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:button="@drawable/tgl_fund" />

                        <RadioButton
                            android:id="@+id/rdoInvest"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:button="@drawable/tgl_invest" />
                    </RadioGroup>

                    <Button
                        android:id="@+id/btnProdManager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/btn_add_square" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>