<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lt_task_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentDescription="@null" >

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="任务筛选"
            android:textColor="@color/text_white_ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/input_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/product_outside_line"
        android:gravity="left"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_search_text"
            style="@style/Txt14Gray808080"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:hint="@string/search_task_select"
            android:imeOptions="actionSearch"
            android:maxLength="12"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/product_search_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="495dp"
        android:layout_height="40dp"        
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/background_brown_faf9f4"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            style="@style/Txt16Gray808080"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="类型    " />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio00"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="全部    " />

            <RadioButton
                android:id="@+id/radio01"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通    " />

            <RadioButton
                android:id="@+id/radio02"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日常    " />

            <RadioButton
                android:id="@+id/radio03"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成就" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="495dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            style="@style/Txt16Gray808080"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="状态    " />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio10"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="全部    " />

            <RadioButton
                android:id="@+id/radio11"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可接    " />

            <RadioButton
                android:id="@+id/radio12"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进行中" />

            <RadioButton
                android:id="@+id/radio13"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已完成" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="495dp"
        android:layout_height="40dp"      
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/background_brown_faf9f4"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView3"
            style="@style/Txt16Gray808080"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="难度    " />

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio20"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="全部    " />

            <RadioButton
                android:id="@+id/radio21"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简单    " />

            <RadioButton
                android:id="@+id/radio22"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通    " />

            <RadioButton
                android:id="@+id/radio23"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="困难    " />

            <RadioButton
                android:id="@+id/radio24"
                style="@style/Txt16Gray808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="史诗" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewSubmit"
        style="@style/CommonButtonRadiusBrownd"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="确认"/>

</LinearLayout>