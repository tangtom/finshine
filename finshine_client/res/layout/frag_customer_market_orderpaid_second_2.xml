<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_white_ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="如已支付订单，请上传支付凭证照" 
            style="@style/Txt18Gray808080"/>

        <ImageView
            android:id="@+id/ivPayment"
            android:layout_width="205dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/bg_payment" />

        <Button
            android:id="@+id/btnUpload"
            style="@style/CommonButtonRadiusBrownd"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="上传" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnOrderPaymentPre2"
            style="@style/CommonButtonRadiusBrownd"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="上一步" />

        <Button
            android:id="@+id/btnCommitPayment"
            style="@style/CommonButtonRadiusBrownd"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:text="提交支付凭证并购买" />
    </LinearLayout>

</LinearLayout>