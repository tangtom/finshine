<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/common_header" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/imgPointerMarket"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@drawable/ic_pointer_open" />

        <ImageView
            android:id="@+id/imgPointerAnalyse"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@drawable/ic_pointer_analyse" />

        <ImageView
            android:id="@+id/imgPointerHeader"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@drawable/ic_pointer_header" />

    
    </LinearLayout>

</RelativeLayout>