<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/Txt20Brownd7c093"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="理财目标" />

                    <ImageButton
                        android:id="@+id/financialEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_edit" />

                    <ImageButton
                        android:id="@+id/financialMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="720dp"
                        android:background="@drawable/ic_pack" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/financailButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="invisible" >

                    <Button
                        android:id="@+id/financialConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存" />

                    <Button
                        android:id="@+id/financialCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="取消" />
                </LinearLayout>
            </RelativeLayout>

            <!--
                 include android:id="@+id/financial_goal" 
                layout="@layout/custom_economy_financial_goal"/>
            -->

            <FrameLayout
                android:id="@+id/financial_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/Txt20Brownd7c093"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="家庭资产状况" />

                    <ImageButton
                        android:id="@+id/familyAssetsEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_edit" />

                    <ImageButton
                        android:id="@+id/familyAssetsMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="680dp"
                        android:background="@drawable/ic_pack" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/familyAssetsButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="invisible" >

                    <Button
                        android:id="@+id/familyAssetsConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存" />

                    <Button
                        android:id="@+id/familyAssetsCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="取消" />
                </LinearLayout>
            </RelativeLayout>

            <!--
             include
            layout="@layout/custom_economy_family_assets"
            android:visibility="visible" />
            -->

            <FrameLayout
                android:id="@+id/family_assets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/Txt20Brownd7c093"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="家庭年度收支" />

                    <ImageButton
                        android:id="@+id/familyIncomeEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_edit" />

                    <ImageButton
                        android:id="@+id/familyIncomeMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="680dp"
                        android:background="@drawable/ic_pack" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/familyIncomeButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="invisible" >

                    <Button
                        android:id="@+id/familyIncomeConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存" />

                    <Button
                        android:id="@+id/familyIncomeCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="取消" />
                </LinearLayout>
            </RelativeLayout>

            <!--
                 include
                layout="@layout/custom_economy_family_income"
                android:visibility="visible" />
            -->

            <FrameLayout
                android:id="@+id/family_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Txt20Brownd7c093"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="历史投资经验" />

                    <ImageButton
                         android:id="@+id/historicalInvestEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_edit" />

                    <ImageButton
                        android:id="@+id/historicalInvestMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="680dp"
                        android:background="@drawable/ic_pack" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/historicalInvestButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="invisible" >

                    <Button
                        android:id="@+id/historicalInvestConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存" />

                    <Button
                        android:id="@+id/historicalInvestCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="取消" />
                </LinearLayout>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/historical_investe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>