<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white_ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cbi_contact_history" />

        <TextView
            style="@style/Txt18Gray808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="基本资料"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLinaerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageBarTop"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textName"
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*姓　名：" />
          
                    <!-- for bug 5197 liying 201408013 -->
                    <EditText
                        android:id="@+id/editName"
                        style="@style/Txt18Gray808080"
                        android:layout_width="150dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text" 
                        android:maxLength="30"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地　　区：" />

                    <!-- <Spinner -->
                    <!-- android:id="@+id/spinnerCity" -->
                    <!-- android:layout_width="0dp" -->
                    <!-- android:layout_height="40dp" -->
                    <!-- android:layout_weight="1" /> -->

                    <Button
                        android:id="@+id/btnCity"
                        style="@style/Txt18Gray808080"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_spninner"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="全部" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资次数：" />

                    <TextView
                        android:id="@+id/textInvestNumber"
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         />

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="次" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textCellPhone1"
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*电　话：" />

                    <EditText
                        android:id="@+id/editCellPhone1"
                        style="@style/Txt18Gray808080"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="phone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年  收  入：" />

                     <Spinner
                        android:id="@+id/spinnerAnnualIncome"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_spninner"
                        android:entries="@array/diploma_status"
                        android:padding="5dp" />

                    <TextView
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性　别：" />

                    <RadioGroup
                        
                        android:id="@+id/radioGroupGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radioMale"
                            style="@style/Txt18Gray808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男" />

                        <RadioButton
                            android:id="@+id/radioFemale"
                            style="@style/Txt18Gray808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="女" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView8"
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="资产总额：" />

                    <TextView
                        android:id="@+id/textTotalAsset"
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="万" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textAge"
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年　龄：" />

                     <!-- <TextView
                        android:id="@+id/txtAge"
                        style="@style/Txt18Gray808080"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="3" /> -->
                        
                    <EditText
                        android:id="@+id/editAge"
                        style="@style/Txt18Gray808080"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_add_invester"
                        android:drawableRight="@drawable/ic_date"
                        android:inputType="textPersonName"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                    
                    <TextView
                        android:id="@+id/textView5"
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="岁" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资总额：" />

                    <EditText
                        android:id="@+id/editCurrentInvestValue"
                        style="@style/Txt18Gray808080"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:maxLength="8" />

                    <TextView
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="万" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学　历：" />

                    <Spinner
                        android:id="@+id/spinnerDiploma"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_spninner"
                        android:entries="@array/diploma_status"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资来源：" />

                    <Button
                        android:id="@+id/spinnerInvestSource"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_spninner"
                        android:gravity="center_vertical"
                        android:padding="5dp" 
                        style="@style/Txt18Gray808080"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textEmail1"
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮　　箱：" />

                    <EditText
                        android:id="@+id/editEmail1"
                        style="@style/Txt18Gray808080"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"
                        />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职　业：" />

                    <Spinner
                        android:id="@+id/spinnerJob"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_spninner"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_weight="2.1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textKeyword"
                        style="@style/Txt18Gray808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关  键  字：" />

                    <EditText
                        android:id="@+id/editKeyword"
                        style="@style/Txt18Gray808080"
                        android:layout_width="0dp"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:maxLength="60" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>