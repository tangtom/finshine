<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/common_header" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/imgMarket"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@drawable/customer_market_chance" />

        <ImageView
            android:id="@+id/imgHistoricOrder"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@drawable/customer_market_dialog" />

        <ImageView
            android:id="@+id/imageAnalyse"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@drawable/custom_manager_data_analyse" />

    
    </LinearLayout>
    
     <Button
            android:id="@+id/imgMarketCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:gravity="center"
            android:layout_marginLeft="735dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/customer_market_chance_count"
            style="@style/Txt10Whiteffffff"/>

</RelativeLayout>